jitRF :: Int -> Int -> IO Int
jitRF m n = do
    fp <- funP =<< BSL.readFile "test/examples/risingFactorial.ðŸŽ"
    pure $ runRF fp m n

wA :: Storable a => Apple a -> (Ptr (Apple a) -> IO b) -> IO b
wA x act =
    allocaBytes (sizeOf x) $ \p ->
        poke p x *> act p

bytesE = either throw id . bytes

